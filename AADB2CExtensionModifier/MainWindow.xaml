<Window x:Class="AADB2CExtensionModifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AADB2CExtensionModifier"
        mc:Ignorable="d"
        Title="Azure AD B2C Extension Attribute Manager" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Authentication Section -->
        <GroupBox Grid.Row="0" Header="Authentication" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Tenant ID:" VerticalAlignment="Center" Margin="0,0,10,10" FontWeight="SemiBold"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TenantIdTextBox" Margin="0,0,10,10" Height="28" VerticalContentAlignment="Center" 
                         ToolTip="Enter your Azure AD Tenant ID (e.g., contoso.onmicrosoft.com or GUID)"/>
                <Button Grid.Row="0" Grid.Column="2" x:Name="LoginButton" Content="Login" Height="32" Margin="0,0,0,10" Click="LoginButton_Click"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Tenant Domain:" VerticalAlignment="Center" Margin="0,0,10,10" FontWeight="SemiBold"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="TenantDomainTextBox" Margin="0,0,10,10" Height="28" VerticalContentAlignment="Center" 
                         IsReadOnly="True" Background="#F5F5F5"
                         ToolTip="Auto-detected tenant domain (e.g., contoso.onmicrosoft.com). Click 'Edit' to override."/>
                <Button Grid.Row="1" Grid.Column="2" x:Name="EditDomainButton" Content="Edit" Height="32" Margin="0,0,0,10" Click="EditDomainButton_Click" IsEnabled="False"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="StatusTextBlock" Text="Not connected" VerticalAlignment="Center" Foreground="Gray"/>
                <Button Grid.Row="2" Grid.Column="2" x:Name="LogoutButton" Content="Logout" Height="32" Click="LogoutButton_Click" IsEnabled="False"/>
            </Grid>
        </GroupBox>

        <!-- User Search Section -->
        <GroupBox Grid.Row="1" Header="User Search" Padding="10" IsEnabled="False" x:Name="SearchGroupBox">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Email/Identity:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <TextBox Grid.Column="1" x:Name="UserEmailTextBox" Margin="0,0,10,0" Height="28" VerticalContentAlignment="Center"
                         ToolTip="Enter user email, UPN, or any identity value (supports B2C users)" KeyDown="UserEmailTextBox_KeyDown"/>
                <Button Grid.Column="2" x:Name="SearchButton" Content="Search User" Height="32" Click="SearchButton_Click"/>
            </Grid>
        </GroupBox>

        <!-- User Info Section -->
        <GroupBox Grid.Row="2" Header="User Information" Padding="10" IsEnabled="False" x:Name="UserInfoGroupBox">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Selected User:" VerticalAlignment="Center" Margin="0,0,10,5" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="SelectedUserTextBlock" Text="None" VerticalAlignment="Center" Foreground="DarkBlue"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Text="User ID:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="UserIdTextBlock" Text="" VerticalAlignment="Center" Foreground="Gray" FontFamily="Consolas" FontSize="11"/>
            </Grid>
        </GroupBox>

        <!-- Extension Attributes Section -->
        <GroupBox Grid.Row="3" Header="Extension Attributes" Padding="10" IsEnabled="False" x:Name="AttributesGroupBox">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0" x:Name="AttributesDataGrid" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          AlternatingRowBackground="#F5F5F5"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#DDDDDD"
                          HeadersVisibility="Column"
                          RowHeight="32"
                          SelectionChanged="AttributesDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Attribute Name" Binding="{Binding AttributeName}" Width="2.5*" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="2*" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Data Type" Binding="{Binding DataType}" Width="1*" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Current Value" Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Width="2.5*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <TextBlock x:Name="ModifiedCountTextBlock" Text="" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="OrangeRed" FontWeight="SemiBold"/>
                    <Button x:Name="RefreshButton" Content="Refresh" Height="32" Margin="0,0,10,0" Click="RefreshButton_Click"/>
                    <Button x:Name="SaveButton" Content="Save Changes" Height="32" Click="SaveButton_Click" IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="True">
                                        <Setter Property="Background" Value="#4CAF50"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="5" x:Name="LoadingOverlay" Background="#CC000000" Visibility="Collapsed">
            <Border Background="White" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock x:Name="LoadingTextBlock" Text="Loading..." FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <ProgressBar IsIndeterminate="True" Width="250" Height="8"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
